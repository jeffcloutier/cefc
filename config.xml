<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.cefc.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    
    <name>Chibougamau Eenou Friendship Centre</name>
    <description>Community center</description>
    <author email="jeff@gnitic.com" href="http://www.gnitic.com">GNITIC</author>

    <preference name="phonegap-version" value="3.3.0" />
    <feature name="http://api.phonegap.com/1.0/device" />
    
    <preference name="orientation"                value="portrait" />       <!-- all: default means both landscape and portrait are enabled -->
    <preference name="phonegap-version" value="cli-6.5.0" />

	
   

	<icon src="icon.png" />
	
    <icon src="res/icons/ios/Icon-App-57x57@1x.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icons/ios/Icon-App-57x57@2x.png" gap:platform="ios" width="114" height="114" />    
    <icon src="res/icons/ios/Icon-App-72x72@1x.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icons/ios/Icon-App-72x72@2x.png" gap:platform="ios" width="144" height="144" />

    <icon src="res/icons/android/mipmap-ldpi/ic_launcher.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icons/android/mipmap-mdpi/ic_launcher.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icons/android/mipmap-hdpi/ic_launcher.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icons/android/mipmap-xhdpi/ic_launcher.png" gap:platform="android" gap:density="xhdpi" />
	
    <gap:splash src="splash.png" />
    
    <gap:splash src="res/screen/android/drawable-ldpi/splash.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/drawable-mdpi/splash.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/drawable-hdpi/splash.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/drawable-xdpi/splash.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="res/screen/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios" width="680" height="960" />
    <gap:splash src="res/screen/ios/Deafult-568h-2x.png" gap:platform="ios" width="640" height="1136" />

    <content src="http://cefc.ca" />
    <access origin="*" subdomains="true" />
</widget>
